<?xml version="1.0" encoding="UTF-8"?>
<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="http://ehcache.org/ehcache.xsd"
         updateCheck="false" name="analyzerCache">

    <!-- Default Cache Configuration, with name 'default' -->
    <defaultCache maxElementsInMemory="500000" eternal="false"
                  overflowToDisk="false" memoryStoreEvictionPolicy="LFU" statistics="true"/>

    <cache name="categoryCache"
           maxElementsInMemory="50000" eternal="false"
           overflowToDisk="false" memoryStoreEvictionPolicy="LFU" statistics="true"/>

    <cache name="productCache"
           maxElementsInMemory="50000" eternal="false"
           overflowToDisk="false" memoryStoreEvictionPolicy="LFU" statistics="true"/>

    <cache name="userCache"
           maxElementsInMemory="75000" eternal="false"
           overflowToDisk="false" memoryStoreEvictionPolicy="LFU" statistics="true"/>

    <cache name="pricesCache"
           maxElementsInMemory="75000" eternal="false"
           overflowToDisk="false" memoryStoreEvictionPolicy="LFU" statistics="true"/>

</ehcache>
